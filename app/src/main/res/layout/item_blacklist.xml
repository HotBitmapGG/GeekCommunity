<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_tap_bg">

    <com.hotbitmapgg.geekcommunity.widget.RoundedImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ico_user_default"
        app:riv_border_color="@android:color/transparent"
        app:riv_border_width="0dp"
        app:riv_corner_radius="0dp"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tv_friend_name"
        style="@style/Smile.TextView._Black"
        android:layout_alignTop="@id/img_friend_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black_alpha"
        android:textSize="14sp"/>

</RelativeLayout>