<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_tap_bg"
              android:orientation="vertical">

    <include
        android:id="@+id/user_details_top"
        layout="@layout/top_layout"/>

    <RelativeLayout
        android:id="@+id/user_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.hotbitmapgg.geekcommunity.widget.RoundedImageView
            android:id="@+id/user_details_photo"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ico_user_default"
            app:riv_border_color="@android:color/transparent"
            app:riv_border_width="0dp"
            app:riv_corner_radius="0dp"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/user_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/user_details_photo"
            android:text="姓名"
            android:textColor="@color/font_normal"
            android:textSize="14sp"/>

        <ImageView
            style="@style/Smile.ImageView"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/register_bottom_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_msg_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="聊天记录"
            android:textColor="@color/font_normal"
            android:textSize="14sp"/>

        <ImageView
            style="@style/Smile.ImageView"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/register_bottom_arrow"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        android:src="@drawable/list_inset_line4"/>

    <RelativeLayout
        android:id="@+id/user_msg_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="聊天背景"
            android:textColor="@color/font_normal"
            android:textSize="14sp"/>

        <ImageView
            style="@style/Smile.ImageView"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/register_bottom_arrow"/>
    </RelativeLayout>

</LinearLayout>